{
  "name": "attention_swb_word_encoder_final",
  "model": "attention",
  "dataset": "swbd",
  "input_unit": "word",
  "vocab_file": "data/swbd/vocab/word_freq5_300h.txt",
  "train_data": "data/swbd/inputs_baseline_freq5_inclusive_eval_train.txt",
  "eval_data": "data/swbd/inputs_baseline_freq5_inclusive_eval_test.txt",

  "learning_rate": 1e-3,
  "batch_size": 32,
  "eval_batch_size": 32,

  "encoder_type": "pbilstm",
  "encoder_num_units": 640,
  "decoder_num_units": 640,
  "attention_num_units": 640,
  "attention_layer_size": 320,
  "output_attention": true,
  "use_encoder_final_state": true,

  "beam_width": 16,
  "length_penalty_weight": 0.5,
  "max_gradient_norm": 5.0
}
