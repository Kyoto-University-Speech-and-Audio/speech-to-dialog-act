{
  "model": "attention",
  "dataset": "default",
  "vocab_file": "data/aps-sps/char.id",
  "train_data": "data/aps-sps/train/char_sort_xlen.txt",
  "test_data": "data/aps-sps/test/char_targets.txt",
  "metrics": "wer",

  "batch_size": 40,
  "eval_batch_size": 40,

  "learning_rate": 1e-4,
  "learning_rate_start_decay_epoch": 10,
  "learning_rate_decay_steps": 5,
  "learning_rate_decay_rate": 0.5,

  "eos_index": 0,
  "sos_index": 1,
  "encoder_type": "bilstm",
  "encoder_num_units": 512,
  "num_encoder_layers": 5,
  "decoder_num_units": 512,
  "num_decoder_layers": 2,
  "attention_num_units": 512,
  "attention_layer_size": 512,
  "location_attention_width": 201,
  "output_attention": true,

  "beam_width": 16,
  "length_penalty_weight": 0.5,
  "max_gradient_norm": 5.0,
  "max_epoch_num": 40
}
