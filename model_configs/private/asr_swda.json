{
  "model": "attention",
  "dataset": "swbd",
  "input_unit": "word",
  "vocab_file": "data/swbd/vocab/words_swda_full.txt",
  "train_data": "data/swbd/swda_full_train.csv",
  "test_data": "data/swbd/swda_full_test.csv",
  "sort_dataset": true,

  "learning_rate": 1e-3,
  "batch_size": 50,
  "eval_batch_size": 50,

  "learning_rate_start_decay_epoch": 10,
  "learning_rate_decay_steps": 5,
  "learning_rate_decay_rate": 0.5,

  "encoder_type": "pbilstm",
  "encoder_num_units": 512,
  "num_encoder_layers": 5,
  "num_decoder_layers": 1,
  "decoder_num_units": 512,
  "attention_num_units": 512,
  "attention_layer_size": 512,
  "output_attention": true,

  "beam_width": 20,
  "length_penalty_weight": 0.5,
  "max_gradient_norm": 5.0,
  "max_epoch_num": 40
}
